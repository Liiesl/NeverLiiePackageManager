{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "NLPS",
  "scopeName": "source.nlps",
  "fileTypes": [".nlps"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#strings" },
    { "include": "#arrays" },
    { "include": "#variables" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.nlps",
          "match": "(?<!\\$)#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.nlps",
          "match": "\\b(if|else|for|in|fn|on|parallel)\\b"
        },
        {
          "name": "keyword.command.nlps",
          "match": "\\b(run|cd)\\b"
        },
        {
          "name": "constant.language.boolean.nlps",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "support.constant.platform.nlps",
          "match": "\\b(windows|unix)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.nlps",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.nlps",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.nlps",
              "match": "\\\\(n|t|r|\\\\)"
            },
            {
              "name": "variable.other.interpolated.nlps",
              "match": "\\$\\{([a-zA-Z_][a-zA-Z0-9_]*|[0-9]+|@|#)\\}"
            }
          ]
        },
        {
          "name": "string.quoted.single.nlps",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.nlps",
              "match": "\\\\(n|t|r|\\\\)"
            },
            {
              "name": "variable.other.interpolated.nlps",
              "match": "\\$\\{([a-zA-Z_][a-zA-Z0-9_]*|[0-9]+|@|#)\\}"
            }
          ]
        }
      ]
    },
    "arrays": {
      "begin": "\\[",
      "end": "\\]",
      "name": "meta.array.nlps",
      "patterns": [
        { "include": "#numbers" },
        { "include": "#strings" },
        { "include": "#variables" },
        { "include": "#comments" },
        {
          "name": "punctuation.separator.comma.nlps",
          "match": ","
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.language.special.nlps",
          "match": "\\$(CWD|HOME|NLPM_HOME|SCRIPT_DIR|OS)\\b"
        },
        {
          "name": "variable.language.argument.nlps",
          "match": "\\$([0-9]+|@|#)\\b"
        },
        {
          "name": "variable.other.nlps",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_./-]*"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.nlps",
          "match": "-?[0-9]+\\.[0-9]+"
        },
        {
          "name": "constant.numeric.integer.nlps",
          "match": "-?[0-9]+"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.nlps",
          "match": "(==|>|<)"
        },
        {
          "name": "keyword.operator.assignment.nlps",
          "match": "="
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.braces.nlps",
          "match": "[{}]"
        },
        {
          "name": "punctuation.section.parens.nlps",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.comma.nlps",
          "match": ","
        }
      ]
    }
  }
}
